<script>
  document.addEventListener("DOMContentLoaded", function (event) {
    if (getUrlParameter("token") !== undefined) {
      $("#requestResetForm").remove();
      $("#tokenInput").val(getUrlParameter("token"))
    } else {
      $("#changePasswordForm").remove();
    }
  });

</script>
