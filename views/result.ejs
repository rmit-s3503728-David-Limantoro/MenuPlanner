<header id="header">
    Search Result
</header>

<body id="HomePage">
    <div>
        <nav>
            <a href="/" target="_self">
                <span>Home</span></a>
            <a href="/upload" target="_self">
                <span>Upload</span></a>
            <a href="/recipe" target="_self">
                <span>Recipe</span></a>
            <a href="/result" target="_self">
                    <span>Result</span></a>

            <div class="search">
                <form action="/search" method="POST">
                    <input type="text" name="searchTerm" class="searchTerm" placeholder="What are you looking for?">
                    <input name="withoutRedirect" value="false" style="display:none">
                    <input type="submit" value="Submit" style="display:none">
                </form>
            </div>
        </nav>
    </div>

    <div class="resulttable">
        <ul>
            <% for(i=0;i<result.Items.length;i++){ %>
            <li>
                <table>
                    <tr>
                        <th>
                            <a href="/recipe?id=<%= result.Items[i].recipeID %>"><%= result.Items[i].title %></a>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            <% if(result.Items[i].img) { %>
                                <img src="<%= result.Items[i].img %>"/>
                            <% } %>
                        </td>
                    </tr>
                    <tr>
                        <td class="intro">
                                <a href="/recipe?id=<%= result.Items[i].recipeID %>"><%= result.Items[i].introduction %></a>
                        </td>
                    </tr>
                </table>
            </li>
            <% } %>
        </ul>
    </div>
</body>


